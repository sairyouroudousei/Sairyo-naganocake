<div class="container">
  <h2 class="mb-3">ログイン</h2>
  <div class="mt-4" style="margin-left: 48px;">
    <h5><span class="px-2">会員の方はこちらからログイン</span></h5>

  <div class="mx-auto w-75">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-3 d-flex align-items-center">
      <%= f.label :email, "メールアドレス", class: "form-label me-3 fw-bold", style: "width: 120px; text-align: right;" %>
      <%= f.email_field :email, class: "form-control w-50", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>

    <div class="form-group mb-3 d-flex align-items-center">
      <%= f.label :password, "パスワード", class: "form-label me-3 fw-bold", style: "width: 120px; text-align: right;" %>
      <%= f.password_field :password, class: "form-control w-50", autocomplete: "current-password" %>
    </div>




    <div class="text-center">
      <%= f.submit "ログイン", class: "btn btn-primary w-10" %>
    </div>
  <% end %>

  <hr class="my-4">

  <div class="mt-4">
    <h5><span class="px-2">会員登録がお済みでない方</span></h5>
  <div class="mt-2" style="margin-left: 48px;">
    <p><%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。</p>
  </div>
</div>