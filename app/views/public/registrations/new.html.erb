<div class="container">
  <div class="text-center">
    <%= image_tag "ながのケーキロゴ1.png", alt: "Logo", class: "mb-3", width: 100 %>
  </div>
  <div class="row pt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <h4><span class="px-2">新規会員登録</span></h4>

      <table class="w-100">
        <tbody>
          <tr class="mb-3">
            <td class="py-2 px-3">名前</td>
            <td class="py-2 px-3"><%= f.label :last_name, "(姓)" %></td>
            <td class="py-2 px-3"><%= f.text_field :last_name, placeholder: "令和", class: "form-control", autocomplete: "family-name" %></td>
            <td class="py-2 px-3"><%= f.label :first_name, "(名)" %></td>
            <td class="py-2 px-3"><%= f.text_field :first_name, placeholder: "道子", class: "form-control", autocomplete: "given-name" %></td>
          </tr>
          <tr class="mb-3">
            <td class="py-2 px-3">フリガナ</td>
            <td class="py-2 px-3"><%= f.label :last_name_kana, "(セイ)" %></td>
            <td class="py-2 px-3"><%= f.text_field :last_name_kana, placeholder: "レイワ", class: "form-control", autocomplete: "family-name" %></td>
            <td class="py-2 px-3"><%= f.label :first_name_kana, "(メイ)" %></td>
            <td class="py-2 px-3"><%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "form-control", autocomplete: "given-name" %></td>
          </tr>
          <tr class="mb-3">
            <td class="py-2 px-3">メールアドレス</td>
            <td class="py-2 px-3"></td>
            <td class="py-2 px-3" colspan="3"><%= f.email_field :email, placeholder: "sample@example.com", class: "form-control", autocomplete: "email" %></td>
          </tr>
          <tr class="mb-3">
            <td class="py-2 px-3">郵便番号(ハイフンなし)</td>
            <td class="py-2 px-3"></td>
            <td class="py-2 px-3" colspan="3"><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control", autocomplete: "postal-code" %></td>
          </tr> 
          <tr class="mb-3">
            <td class="py-2 px-3">住所</td>
            <td class="py-2 px-3"></td>
            <td class="py-2 px-3" colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control", autocomplete: "street-address" %></td>
          </tr>
          <tr class="mb-3">
            <td class="py-2 px-3">電話番号(ハイフンなし)</td>
            <td class="py-2 px-3"></td>
            <td class="py-2 px-3" colspan="3"><%= f.text_field :telephone_number, placeholder: "00000000000", class: "form-control", autocomplete: "tel" %></td>
          </tr>
          <tr class="mb-3">
            <td class="py-2 px-3">パスワード(6文字以上)</td>
            <td class="py-2 px-3"></td>
            <td class="py-2 px-3" colspan="3"><%= f.password_field :password, class: "form-control", autocomplete: "new-password" %></td>
          </tr>
          <tr class="mb-3">
            <td class="py-2 px-3">パスワード(確認用)</td>
            <td class="py-2 px-3"></td>
            <td class="py-2 px-3" colspan="3"><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %></td>
          </tr>
        </tbody>
      </table>

      <div class="mt-3 text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <h4><span class="px-2">既に登録済みの方</span></h4>
  </div>
  <div class="mt-2" style="margin-left: 48px;">
    <p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
  </div>
</div>