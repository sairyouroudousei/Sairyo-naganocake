<h2>ショッピングカート</h2>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete , class: "btn btn-danger"%>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td><!--写真と商品名-->
            <%#= image_tag @item.image, size: "50*50" %>
            <%= cart_item.item.name %>
          </td>
          <td><!--税込単価-->
            <%= cart_item.tax_included_price %>
          </td>
          <td><!--数量と変更-->
            <%= form_with model: cart_item, method: :patch, local: true do |f| %>
              <%= f.select :amount, *[1..10], selected: cart_item.amount %>
              <%= f.submit "変更", class: "btn btn-info" %>
            <% end %>
          </td>
          <td><!--小計-->
            <%= cart_item.tax_included_price * cart_item.amount %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>

  <%= link_to "買い物を続ける", root_path, class: "btn btn-secondary" %>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-secondary" %>

    <table>
      <tr>
        <td>仮合計金額</td>
        <td><%= @cart_items.sum { |cart_item| cart_item.tax_included_price * cart_item.amount} %>
        </td>
      </tr>
    </table>
