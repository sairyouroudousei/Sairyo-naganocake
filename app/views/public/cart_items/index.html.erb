<h2>ショッピングカート</h2>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete , class: "btn btn-danger"%>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td><!--写真と商品名-->
            <% if cart_item.item.present? && cart_item.item.image.present? %>
              <%= image_tag cart_item.item.image, size: "50x50" %>
            <% else %>
              <%= image_tag "no_image.jpg", size: "50x50" %> <!-- デフォルト画像を用意 -->
            <% end %>
            <br>
            <%= cart_item.item&.name || "商品情報がありません" %>
          </td>
          <td><!--税込単価-->
            ¥<%= cart_item.tax_included_price %>
          </td>
          <td><!--数量と変更-->
            <%= form_with model: cart_item, method: :patch, local: true do |f| %>
              <%= f.select :amount, *[1..10], selected: cart_item.amount %>
              <%= f.submit "変更", class: "btn btn-info" %>
            <% end %>
          </td>
          <td><!--小計-->
            ¥<%= cart_item.tax_included_price * cart_item.amount %>
          </td>
          <td>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>

  
<table class="table table-bordered">
  <tbody>
    <tr>
      <th>合計金額</th>
      <td><strong>¥<%= @cart_items.sum { |cart_item| cart_item.tax_included_price * cart_item.amount } + 800 %></strong></td>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける", items_path, class: "btn btn-secondary" %>
