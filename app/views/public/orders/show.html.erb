<div class="container mt-5">
  <h4 class="mb-4">
    <span style="bg-light px-2">注文詳細</span>
  </h4>

  <div class="card shadow-sm">
    <div class="card-body">
      <p><strong>注文番号:</strong> <%= @order.id %></p>
      <p><strong>注文日:</strong> <%= @order.created_at.strftime('%Y-%m-%d') %></p>
      <p><strong>合計金額:</strong> <%= number_to_currency(@order.total_amount) %></p>
      <p><strong>配送先住所:</strong> <%= @order.shipping_address %></p>

      <h5>商品一覧</h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>数量</th>
            <th>価格</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= item.amount %></td>
              <td><%= number_to_currency(item.price, unit: '円') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to '戻る', public_orders_path, class: 'btn btn-secondary mt-3' %>
</div>