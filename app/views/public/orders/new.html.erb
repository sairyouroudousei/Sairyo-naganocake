<div>
  <h2>注文情報入力</h2>
</div>
<%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
  <div>
    <h3>支払い方法</h3>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :クレジットカード, Order.payment_methods_i18n[:credit_card] %><br>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :銀行振込, Order.payment_methods_i18n[:transfer]%>
  </div>

  <div>
    <h3>お届け先</h3>

    <div>
      <%= f.radio_button :address_type, "member_address", checked: true %>
      <%= f.label :address_type, "ご自身の住所" %><br>
      〒<%= current_customer.postal_code + " " + current_customer.address + " " + current_customer.last_name + current_customer.first_name %>
    </div>

    <div>
      <%= f.radio_button :address_type, "registered_address" %>
      <%= f.label :address_type, "登録済住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
    </div>

    <div>
      <%= f.radio_button :address_type, "new_address" %>
      <%= f.label :address_type, "新しいお届け先" %>
      <table>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
    </div>

  <%= button_to '確認画面へ進む', orders_confirm_path, method: :post, class: "btn btn-info" %>
<% end %>
