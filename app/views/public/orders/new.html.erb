<div class ="container" >
  <h3>注文情報入力</h3>
    <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
    <div>
      <h4> 支払い方法</h4>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :クレジットカード, Order.payment_methods_i18n[:credit_card] %><br>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :銀行振込, Order.payment_methods_i18n[:transfer]%>
    </div>

    <div>
      <h4> お届け先</h4>
      <div>
        <%= f.radio_button :address_type, "member_address", checked: true %>
        <%= f.label :address_type, "ご自身の住所" %><br>
        〒<%= current_customer.postal_code %><br>
        <%= current_customer.address %><br>
        <%= current_customer.last_name + current_customer.first_name %> 様
      </div>

      <div>
        <%= f.radio_button :address_type, "registered_address" %>
        <%= f.label :address_type, "登録済の住所から選択" %><br>
        <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
      </div>

      <div>
        <%= f.radio_button :address_type, "new_address" %>
        <%= f.label :address_type, "新しいお届け先" %>
        <table>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code, placeholder: "00000000" %></td>
          </tr>
         <tr>
            <td>住所</td>
            <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
          </tr>
          <tr>
            <td>宛名</td>
            <td><%= f.text_field :name, placeholder: "0000000000" %></td>
          </tr>
        </table>
      </div>
    </div>
    <div>
      <%= button_to '確認画面へ進む', orders_confirm_path, method: :post, class: "btn btn-sm btn-outline-success" %>
    </div>
  <% end %>
</div>