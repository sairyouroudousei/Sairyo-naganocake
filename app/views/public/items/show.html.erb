<div class = "container" >
  <h1><%= @item.name %></h1>
  <div class = "row">
    <div class = "col">
      <%= link_to item_path(@item) do %>
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "200x200" %>
        <% end %>
      <% end %>
    </div>
    <div class = "col">
      <table class = "table border less">
        <tr>
          <td>価格(税込)</td>
          <td><%= (@item.price * 1.1).floor %>円</td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= @item.is_active ? '販売中' : '販売停止' %></td>
        </tr>
      </table>

      <%= form_with model: CartItem.new, url: cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <label>数量</label>
        <%= f.select :amount, options_for_select(1..10, selected: 1) %>
        <%= f.submit 'カートに追加', class: "btn btn-sm btn-outline-success" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to '戻る', items_path, class: "btn btn-sm btn-outline-secondary " %>