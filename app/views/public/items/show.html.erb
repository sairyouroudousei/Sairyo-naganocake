<h1><%= @item.name %></h1>
<%= link_to item_path(@item) do %>
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "200x200" %>
  <% end %>
<% end %>
<p>価格: <%= @item.price %>円</p>
<p>説明: <%= @item.introduction %></p>
<p>販売ステータス: <%= @item.is_active ? '販売中' : '販売停止' %></p>
<%= form_with model: CartItem.new, url: cart_items_path, method: :post do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <label>数量: </label>
  <%= f.number_field :amount, value: 1, min: 1 %>
  <%= f.submit 'カートに追加' %>
<% end %>
<%= link_to '戻る', items_path %>