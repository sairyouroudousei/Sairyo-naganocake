<div class = "container">
    <h1>商品一覧</h1>
  <div >

    <div class = "card-list-container ">
      <% @items.each do |item| %>
        <div class="card w-50 mx-auto mt-5 shadow-lg">
          <%= link_to item_path(item) do %>
            <% if item.image.attached? %>
              <%= image_tag item.image, size: "200x200", class: "card-img-top";  %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "200x200", class: "card-img-top";  %>
            <% end %>
          <% end %>

          <div class="card-body">
            <div class="row">
                <h5 class="card-title mx-auto "><%= item.name %></h5>
                <p class = "card-price mx-auto"><%= (item.price * 1.1).floor %>円</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <div class = "mx-auto btn btn-info">
      <%= paginate @items %>
    </div>
</div>
