<div class="container">
  <h4 class="my-5"><span style="background-color:#eeeeee">会員情報編集</span></h4>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 offset-2"> 
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td colspan="2"><%= f.text_field :address, class: "form-control w-100" %></td> <!-- w-100クラスで幅を100%に調整 -->
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number, class: "form-control" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger ml-2" %> <!-- 退会ボタンにml-2を追加して間隔を開ける -->
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

