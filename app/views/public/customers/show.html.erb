<div class="container">
  <div class="row">
    <div class="col">
      <div class="col-xl-2 col-md-3 bg-light text-center" style="margin-left: 80px;">
        <h5 class="my-2">マイページ</h5>
      </div>
        <div class="d-flex align-items-center" style="padding-top: 5px;padding-bottom: 10px;">
          <h4><b>登録情報</b></h4>
          <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success btn-sm ml-3" %>
        </div>
        <table class="table table-bordered">
          <tr>
            <td class="bg-light" style="width: 200px;">氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
        <div class="d-flex align-items-center mb-3">
          <h5><b>配送先</b></h5>
          <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary btn-sm ml-3" %>
        </div>
        <div class="d-flex align-items-center">
          <h5><b>注文履歴</b></h5>
          <%= link_to "一覧を見る", orders_path, class:"btn btn-primary btn-sm ml-3" %>
        </div>
    </div>
  </div>
</div>