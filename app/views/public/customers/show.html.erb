<div class="container">
  <div class="row">
    <div class="col">
      <div class="col-xl-2 col-md-3 text-center" style="margin-left: 80px;">
        <h5 class="mt-2">マイページ</h5>
      </div>
        <div class="d-flex align-items-center" style="padding-top: 5px;padding-bottom: 10px;">
          <h4>登録情報</h4>
          <%= link_to "編集", customers_information_edit_path, class:"btn btn-outline-success btn-sm ml-3" %>
        </div>
        <table class="table table-bordered">
          <tr>
            <td class="bg-light" style="width: 200px;">氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td class="bg-light">カナ</td>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <td class="bg-light">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
        <div class="d-flex align-items-center mb-3">
          <%= link_to "注文履歴一覧", orders_path, class:"btn btn-outline-secondary btn-sm ml-3" %>
          <%= link_to "配送先一覧", addresses_path, class:"btn btn-outline-success btn-sm ml-3" %>
        </div>
    </div>
  </div>
</div>