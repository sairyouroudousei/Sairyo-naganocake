<div class = "container">
  <% if @genre.errors.any? %>
    <div class="error_messages">
      <h2>エラーがあります：</h2>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3 class="m-4">
    ジャンル一覧
  </h3>
  <div>
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
       新規追加 <%= f.text_field :name, placeholder: "ジャンル名" %>
      <%= f.submit '追加',class:"btn btn-sm btn-outline-success ml-3" %>
    <% end %>
    <table class= 'm-4 table table table-borderless'>
      <thead>
        <tr>
          <td>ジャンル名</td>
          <td></td>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre),class:"btn btn-sm btn-outline-success ml-3" %></td>
        </tr>
      </tbody>
    <% end %>
    </table>
  </div>