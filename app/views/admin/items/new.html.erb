<div class = "container">
  <div class="error_messages">
    <% if @item.errors.any? %>
      <h2>エラーがあります：</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <h2>新規商品登録</h2>
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
    <table class='table table border less'>
        <tr>
          <th><%= f.label :name,"商品名" %></th>
          <th><%= f.text_field :name %></th>
        </tr>
        <tr>
          <th><%= f.label :genre_id,"ジャンル" %></th>
          <th><%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: 'ジャンルを選択' } %></th>
        </tr>
        <tr>
          <th><%= f.label :price,"税抜き価格" %></th>
          <th><%= f.number_field :price %></th>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <th><%= f.radio_button :is_active, true %><%= f.label :is_active_true, '販売中' %><br>
              <%= f.radio_button :is_active, false %><%= f.label :is_active_false, '販売停止中' %></th>
        </tr>
        <tr>
          <th><%= f.label :image,"画像アップロード" %></th>
          <th><%= f.file_field :image %></th>
        </tr>
        <tr>
          <th><%= f.label :introduction,"説明" %></th>
          <th><%= f.text_area :introduction %></th>
        </tr>
    </table>
  <%= link_to '戻る', admin_items_path, class:"btn btn-sm btn-outline-secondary ml-3" %>
  <%= f.submit '登録', class:"btn btn-sm btn-outline-success ml-3" %>
  <% end %>
</div>
