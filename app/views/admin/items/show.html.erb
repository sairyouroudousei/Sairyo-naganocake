<h1>Admin::Items#show</h1>
<p>Find me in app/views/admin/items/show.html.erb</p>
<h1><%= @item.name %></h1>
<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.jpg', size: "200x200" %>
<% end %>
<p>ジャンル: <%= @item.genre&.name || '未設定' %></p>
<p>価格: <%= @item.price %>円</p>
<p>販売ステータス: <%= @item.is_active ? '販売中' : '販売停止' %></p>
<p>説明: <%= @item.introduction %></p>
<p>登録日時: <%= @item.created_at.strftime("%Y-%m-%d %H:%M") %></p>
<p>更新日時: <%= @item.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
<%= link_to '編集', edit_admin_item_path(@item), class:"btn btn-primary btn-sm ml-3" %>
<%= link_to '削除', admin_item_path(@item), class:"btn  btn-danger btn-sm ml-3",  method: :delete, data: { confirm: '本当に削除しますか？' } %>

<%= link_to '一覧へ戻る', admin_items_path, class:"btn btn-primary btn-sm ml-3" %>