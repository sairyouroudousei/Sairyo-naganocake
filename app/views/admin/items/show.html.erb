<div class = "container" >
  <h2><%= @item.name %></h2>
    <div class = "row">
      <div class = "col">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "150x150" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "150x150" %>
        <% end %>
      </div>

      <div class = "col">
        <table class = "table border less">
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre&.name || '未設定' %></td>
          </tr>
          <tr>
            <td>価格</td>
            <td><%= @item.price %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_active ? '販売中' : '販売停止' %></td>
          </tr>
          <tr>
            <td>説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>登録日時</td>
            <td><%= @item.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
          <tr>
            <td>更新日時</td>
            <td><%= @item.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
        </table>
      </div>
    </div>
    <%= link_to '編集', edit_admin_item_path(@item), class:"btn btn-sm btn-outline-success ml-3" %>
    <%= link_to '削除', admin_item_path(@item), class:"btn btn-sm btn-outline-danger ml-3",  method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <%= link_to '一覧へ戻る', admin_items_path, class:"btn btn-sm btn-outline-secondary ml-3" %>
  </div>