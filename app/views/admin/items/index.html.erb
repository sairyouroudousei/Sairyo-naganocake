<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>
<h1>商品管理一覧</h1>
<%= link_to '新規商品登録', new_admin_item_path %>
<ul>
  <% @items.each do |item| %>
    <li>
      <%= item.id %>
      <% if item.image.attached? %>
        <%= image_tag item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image.jpg', size: "200x200" %>
      <% end %>
      <%= link_to item.name, admin_item_path(item) %> - <%= item.price %>円
      <%= link_to '編集', edit_admin_item_path(item) %>
      <%= link_to '削除', admin_item_path(item), method: :delete, data: { confirm: '本当に削除しますか？' } %>

    </li>
  <% end %>
</ul>