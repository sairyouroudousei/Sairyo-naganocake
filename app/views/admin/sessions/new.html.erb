<div class="container">
<h2 class="mb-3">管理者ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field my-2">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field my-2">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="text-center">
            <%= f.submit "ログイン", class: "btn btn-sm btn-outline-success w-10" %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>