<div class="container">
  <h4 class="m-4"><span style="background-color:#eeeeee">注文履歴一覧</span></h4>
</div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) %>
                <%= order.created_at: :desc.strtime("%Y-%m-%d %H:%M") %>
              <% end %>
            </td>
            <td><%= order.customer.full_name %></td>
            <td><%= orde.order_details.sum(:amount) %></td>
            <td><%= order.status %></td>
          <tr>
        <% end %>
      <tbody>
    </table>
    <%= paginate @order %>
  </div>
</div>
