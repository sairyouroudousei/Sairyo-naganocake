<div class="container">
    <h4 class="m-4">
      <span style="bg-light px-2">
        <%= @customer.full_name %>さんの会員情報詳細
      </span>
    </h4>
  <div class="row">
    <div class="col-6">
    <table class=" table table-borderless">
      <tbody>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td>
              <%= @customer.last_name %>
              <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
              <% if @customer.is_customer_status %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-secondary">退会</td>
              <% end %>
          </tr>
        </tbody>
          <tr>
            <td></td>
            <td><%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-sm btn-outline-success" %>
                <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-sm btn-outline-success" %>
            </td>
          </tr>
      </table>
    </div>
  </div>
</div>