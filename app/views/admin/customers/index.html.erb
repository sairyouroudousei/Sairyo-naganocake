<div class="container">
  <h4 class="m-4">
    <span style="bg-light px-2">会員一覧</span>
  </h4>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer|%>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name,edit_admin_customer_path(customer) %></td>
            <td><%= customer.email %></td>
            <% if customer.is_customer_status %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-secondary">退会</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= paginate @customers, theme: 'bootstrap-5' %>
</div>